  <h1>Listing Students</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>School_id</th>
        <th>User_id</th>
        <th colspan="3">Aciones</th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.school_id %></td>
        <td><%= student.user_id %></td>
        <td>
        <div class=" btn btn-group"> 
        <%= link_to 'Show', student , class:"btn btn-default btn-md" %>
        <%= link_to 'Edit', edit_student_path(student) , class:"btn btn-default btn-md" %>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-default btn-md" %></div> </td>
        
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Student', new_student_path , class:"btn btn-default" %>



