<p id="notice"> <%= notice %> </p>

<h1>Listing Users</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Dir</th>
      <th>isAdmin<th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.dir %></td>
        <td><%= user.admin %> </td>
        <td>
        <div class="btn btn-group">
          <%= link_to 'Show', user , class: "btn btn-default" %>
        <%= link_to 'Edit', edit_user_path(user) , class: "btn btn-default"%>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-default" %>   
        </div></td>
        
      </tr>
      <% end %>
    </tbody>
  </table>



<%= link_to 'New User', new_user_path , class:"btn btn-default" %>
